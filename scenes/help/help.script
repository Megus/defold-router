local router_helper = require("main.router_helper")

function init(self)
    msg.post(".", "acquire_input_focus")
end

function on_message(self, message_id, message, sender)
    if message_id == hash("back") then
        router_helper.close_scene()
    elseif message_id == hash("chapter") then
        router_helper.push("help_chapter", {chapter = message.chapter})
    end
end
